<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#d5000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/black</item>

    </style>


    <style name="AppTheme.NoActionBar_StatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Card">
        <item name="android:background">@color/cardBackground</item>
    </style>

    <style name="Picker"/>

    <style name="Text.Sub">
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">15sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <!--text-->
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Text.Invervse">
        <item name="android:textColor">@color/textInverse</item>
    </style>

    <style name="Text.Accent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.H1">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.H1.Accent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


<!--HMS PICKER-->
    <style name="ScrollNumberPickerStyle">
        <item name="npv_ShowCount">5</item>
        <item name="npv_ShowDivider">false</item>
        <item name="npv_WrapSelectorWheel">true</item>
        <item name="npv_ItemPaddingHorizontal">2dp</item>
        <item name="npv_TextSizeNormal">@dimen/text_size_normal_item</item>
        <item name="npv_TextSizeSelected">@dimen/text_size_selected_item</item>
        <item name="npv_TextColorNormal">@android:color/darker_gray</item>
        <item name="npv_TextColorSelected">@android:color/holo_red_light</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">56dp</item>
    </style>

    <style name="Label">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <!--PlayCell-->
    <style name="TaskTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TaskSubTitle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text</item>
    </style>


    <style name="Text.UpperDate">
        <item name="android:textColor">@color/textInverse</item>
    </style>


    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/pickerNotSelected</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>


</resources>
