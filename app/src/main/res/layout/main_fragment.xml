<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slidingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoFadeColor="@color/black"
    sothree:umanoOverlay="true"
    sothree:umanoPanelHeight="86dp"
    sothree:umanoParallaxOffset="100dp"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        tools:context=".screen.MainActivity">

        <FrameLayout
            android:id="@+id/top_bg"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/upper_region"/>

        <TextView
            android:id="@+id/dateText"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_xl"
                android:layout_marginTop="@dimen/margin_xl"
                android:layout_marginEnd="@dimen/margin_xl"
                android:clipChildren="false"
                android:padding="@dimen/standard">


                <TextView
                    android:id="@+id/titleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:drawableStart="@drawable/ic_title"
                    android:visibility="invisible"
                    tools:text="Bydle"/>


                <TextView
                    android:id="@+id/minTV"
                    style="@style/Text.H1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="8dp"
                    android:textAlignment="center"
                    tools:text="15:30"/>

                <TextView
                    android:id="@+id/numberOfRepeatsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    tools:text='10'
                    android:drawableStart="@drawable/ic_repeat"/>

            </FrameLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                card_view:cardCornerRadius="10dp">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"/>

                    <com.pixelcan.inkpageindicator.InkPageIndicator
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginTop="@dimen/standard"
                        app:ipi_currentPageIndicatorColor="@color/colorAccent"
                        app:ipi_pageIndicatorColor="@color/gray_light"/>

                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xl"
                    android:layout_marginTop="@dimen/margin_xl"
                    android:layout_marginEnd="@dimen/margin_xl"
                    android:padding="@dimen/standard">

                    <TextView
                        android:id="@+id/timeTV"
                        style="@style/Text.H1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="00:00:00"/>

                    <FrameLayout
                        android:id="@+id/recordButtonContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical|right">

                        <include
                            layout="@layout/action_button"/>

                    </FrameLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>





    </android.support.constraint.ConstraintLayout>


    <!-- SLIDING LAYOUT -->

    <LinearLayout
        android:id="@+id/dragView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lower_region"
        android:clickable="true"
        android:focusable="false"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">

            <android.support.design.widget.TabLayout
                android:id="@+id/mainActivityTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/colorAccent"
                app:tabMode="fixed"/>

            <TextView
                android:id="@+id/nextTaskTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="Your next task"/>

        </FrameLayout>

        <fp.cookcorder.screen.CustomViewPager
            android:id="@+id/mainActivityVP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:translationY="-65dp"
            />
    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
