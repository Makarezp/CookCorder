<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".screen.MainActivity">

    <TextView
        android:id="@+id/mainFragmentTVAxillaryUpper"
        style="@style/Picker.Axillary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/xl"
        android:text="@string/alarm_will_be_fired"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/mainFragmentMinutePicker"
        />

    <fp.cookcorder.screen.custom.ScrollHmsPicker
        android:id="@+id/mainFragmentMinutePicker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainFragmentTVAxillaryUpper"
        app:shp_normal_color="@color/white_70"
        app:shp_selected_color="@color/colorAccent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/mainFragmentMinutePicker"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/from_now"
        style="@style/Picker.Axillary"
        app:layout_constraintEnd_toEndOf="@+id/mainFragmentMinutePicker"
        app:layout_constraintTop_toBottomOf="@+id/mainFragmentMinutePicker"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="@dimen/xl"
        android:layout_marginStart="@dimen/xl"
        app:layout_constraintBottom_toTopOf="@+id/mainFragmentTVTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/mainFragmentETTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title"
            android:inputType="text"
            android:maxLines="1"/>


    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/mainFragmentTVTime"
        style="@style/TextStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:text="00:00:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:layout_constraintBottom_toTopOf="@id/floatingActionButton"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:clickable="true"
        android:src="@drawable/ic_mic_none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mainFragmentTVTime"
        />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/recordAnimation"
        android:layout_width="155dp"
        android:layout_height="155dp"
        app:layout_constraintTop_toTopOf="@id/floatingActionButton"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="record.json"
        android:visibility="invisible"
        app:lottie_loop="true"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/success"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="@id/floatingActionButton"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="animation_success.json"
        android:elevation="10dp"
        android:visibility="gone"
        app:lottie_loop="false"/>



</android.support.constraint.ConstraintLayout>
