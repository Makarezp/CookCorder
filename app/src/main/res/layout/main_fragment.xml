<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slidingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoFadeColor="@color/colorPrimaryAlpha"
    sothree:umanoOverlay="true"
    sothree:umanoPanelHeight="78dp"
    sothree:umanoParallaxOffset="100dp"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        tools:context=".screen.MainActivity">

        <FrameLayout
            android:id="@+id/top_bg"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@drawable/upper_region"/>


        <FrameLayout
            android:id="@+id/title_container"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/title_container"
            app:layout_constraintBottom_toBottomOf="@+id/top_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_bg">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/titleET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_deep"
                    android:drawableLeft="@drawable/notes_vector"
                    android:hint="@string/title"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/gray_deep"/>

        </FrameLayout>


        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_xl"
                android:layout_marginTop="@dimen/margin_xl"
                android:layout_marginEnd="@dimen/margin_xl"
                android:clipChildren="false"
                android:padding="@dimen/standard">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="@dimen/standard"
                    android:src="@drawable/ic_clock"/>

                <TextView
                    android:id="@+id/minTV"
                    style="@style/Text.H1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    tools:text="15:30"/>

            </FrameLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_xl"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="@dimen/margin_xl"
                card_view:cardCornerRadius="20dp">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"/>

                    <com.pixelcan.inkpageindicator.InkPageIndicator
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginTop="@dimen/standard"
                        app:ipi_currentPageIndicatorColor="@color/white"
                        app:ipi_pageIndicatorColor="@color/gray_light"/>

                </FrameLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xl"
            android:layout_marginTop="@dimen/margin_xl"
            android:layout_marginEnd="@dimen/margin_xl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardContainer">

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:background="@color/text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardContainer"/>


            <FrameLayout
                android:id="@+id/recordButtonContainer"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                >

                <include layout="@layout/action_button"/>

            </FrameLayout>

            <TextView
                android:id="@+id/timeTV"
                style="@style/Text.H1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="00:00:00"/>

        </FrameLayout>


    </android.support.constraint.ConstraintLayout>


    <!-- SLIDING LAYOUT -->

    <LinearLayout
        android:id="@+id/dragView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lower_region"
        android:clickable="true"
        android:focusable="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">

            <android.support.design.widget.TabLayout
                android:id="@+id/mainActivityTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                app:tabIndicatorColor="@android:color/white"
                app:tabGravity="fill"
                app:tabMode="fixed"/>

        </LinearLayout>

        <fp.cookcorder.screen.CustomViewPager
            android:id="@+id/mainActivityVP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:translationY="-65dp"
            />
    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
